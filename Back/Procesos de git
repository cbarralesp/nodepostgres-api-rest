# Inicializar repositorio y configurar rama main
git init
git branch -M main

# Confirmar cambios en la rama main
git add .
git commit -m "Descripción del cambio"

# Etiquetar versiones
git tag -a v1.0 -m "Versión 1.0"

# Crear y trabajar en una nueva rama
git checkout -b nueva-rama

# Fusionar nueva rama con main y etiquetar nueva versión
git checkout main
git merge nueva-rama
git tag -a v2.0 -m "Versión 2.0"

# Volver a una versión anterior
git checkout v1.0
